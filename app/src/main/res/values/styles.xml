<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CardViewStyle">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginBottom">0dp</item>
        <item name="cardCornerRadius">4dp</item>
        <item name="contentPadding">0dp</item>
        <item name="android:clipToPadding">false</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="cardElevation">2dp</item>
    </style>

    <style name="PaddingStyle">
        <item name="android:paddingTop">@dimen/spacing_10dp</item>
        <item name="android:paddingBottom">@dimen/spacing_10dp</item>
        <item name="android:paddingLeft">@dimen/spacing_10dp</item>
        <item name="android:paddingRight">@dimen/spacing_10dp</item>
    </style>

</resources>